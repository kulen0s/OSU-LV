1.4.1
 
def ukupno(sati,satnica):
    ukupno=sati*satnica
    return ukupno
 
def main():
    sati = float(input("Radni sati:"))
    satnica = float(input("Eura/h:"))
 
    placa = ukupno(sati,satnica)
 
    print("Ukupno:",placa,"eura")
 
if __name__ == "__main__":
    main()
 
